{
  "version": 2,
  "builds": [
    { "src": "api/send-alert.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/404", "dest": "/public/404.html" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/404.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}