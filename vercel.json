{
  "version": 2,
  "builds": [
    { "src": "api/send-alert.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/send-alert",
      "dest": "/api/send-alert.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/send-alert.js",
      "dest": "/api/send-alert.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}